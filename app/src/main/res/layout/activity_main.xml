<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <ImageView
              android:layout_width="match_parent"
              android:layout_height="255dp"
              android:background="@drawable/logosmp"
              >
          </ImageView>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:gravity="center">
                  <ImageView
                      android:layout_width="100dp"
                      android:layout_height="100dp"
                      android:src="@drawable/bg">
                  </ImageView>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="SMP MUHAMMADIYAH1 TEGAL"
                      android:textStyle="bold"
                      android:textColor="@color/white"
                      android:gravity="center"
                      android:textSize="20dp">
                  </TextView>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Bersama Kita Bangun Generasi Bangsa"
                      android:textStyle="bold"
                      android:textColor="@color/white"
                      android:textSize="20dp">
                  </TextView>
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="2"
                  android:orientation="horizontal">

                  <LinearLayout
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:background="#00BCD4"
                      android:gravity="center_horizontal"
                      android:orientation="vertical">

                      <ImageView
                          android:layout_width="85dp"
                          android:layout_height="85dp"
                          android:background="#00BCD4"
                          android:onClick="profil"
                          android:src="@drawable/profil"></ImageView>

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Profil"
                          android:textColor="@color/black"
                          android:textSize="24dp"
                          android:textStyle="bold"></TextView>

                      <ImageView
                          android:layout_width="75dp"
                          android:layout_height="75dp"
                          android:layout_marginTop="40dp"
                          android:background="#00BCD4"
                          android:onClick="prestasi"
                          android:src="@drawable/prestasi"></ImageView>

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Prestasi"
                          android:textColor="@color/black"
                          android:textSize="24dp"
                          android:textStyle="bold"></TextView>

                      <ImageView
                          android:layout_width="75dp"
                          android:layout_height="75dp"
                          android:layout_marginTop="40dp"
                          android:background="#00BCD4"
                          android:onClick="absensi"
                          android:src="@drawable/absensi"></ImageView>

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Absensi"
                          android:textColor="@color/black"
                          android:textSize="24dp"
                          android:textStyle="bold">

                      </TextView>

                      <ImageView
                          android:layout_width="85dp"
                          android:layout_height="85dp"
                          android:layout_marginTop="40dp"
                          android:background="#00BCD4"
                          android:onClick="spp"
                          android:src="@drawable/apps">

                      </ImageView>

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="SPP"
                          android:textColor="@color/black"
                          android:textSize="24dp"
                          android:textStyle="bold">

                      </TextView>
                  </LinearLayout>
                  <LinearLayout
                      android:layout_weight="1"
                      android:layout_width="0dp"
                      android:orientation="vertical"
                      android:layout_height="match_parent"
                      android:gravity="center_horizontal"
                      android:background="#00BCD4">
                      <ImageView
                          android:layout_width="85dp"
                          android:layout_height="85dp"
                          android:src="@drawable/tugas"
                          android:background="#00BCD4"
                          android:onClick="tugas">
                      </ImageView>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="tugas"
                          android:textSize="26dp"
                          android:textStyle="bold"
                          android:textColor="@color/black">
                      </TextView>
                      <ImageView
                          android:layout_width="75dp"
                          android:layout_height="75dp"
                          android:layout_marginTop="40dp"
                          android:background="#00BCD4"
                          android:src="@drawable/estrakulikuler"
                          android:onClick="ekstrakulikuler">
                      </ImageView>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Ekstrakulikuler"
                          android:textSize="24dp"
                          android:textStyle="bold"
                          android:textColor="@color/black">
                      </TextView>
                      <ImageView
                          android:layout_width="85dp"
                          android:layout_height="85dp"
                          android:layout_marginTop="40dp"
                          android:background="#00BCD4"
                          android:src="@drawable/informasi"
                          android:onClick="informasi">
                      </ImageView>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Informasi"
                          android:textSize="24dp"
                          android:textStyle="bold"
                          android:textColor="@color/black">
                      </TextView>
                      <ImageView
                          android:layout_width="85dp"
                          android:layout_height="85dp"
                          android:layout_marginTop="40dp"
                          android:background="#00BCD4"
                          android:src="@drawable/exit"
                          android:onClick="exit">
                      </ImageView>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Exit"
                          android:textSize="24dp"
                          android:textStyle="bold"
                          android:textColor="@color/black">
                      </TextView>
                  </LinearLayout>
              </LinearLayout>
          </LinearLayout>
      </RelativeLayout>
  </ScrollView>
</RelativeLayout>